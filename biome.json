{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "formatWithErrors": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!**/node_modules/**", "!**/dist/**"]
  }
}
