{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"formatWithErrors": true
	},
	"files": {
		"ignoreUnknown": true,
		"ignore": ["node_modules/**", "dist/**"]
	}
}
